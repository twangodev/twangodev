---
import Image from "astro/components/Image.astro";

type Props = {
  text: string;
  icon: string;
  href: string;
};

const { text, icon, href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="blend group flex w-fit items-center gap-2 rounded border border-neutral-200 px-3 py-2 hover:bg-neutral-100 dark:border-neutral-700 hover:dark:bg-neutral-800"
>
  <Image src={icon} class="size-6" alt="" height={20} width={20} />
  <span
    class="blend text-sm text-neutral-500 group-hover:text-black dark:text-neutral-400 group-hover:dark:text-white"
  >
    {text}
  </span>
</a>
