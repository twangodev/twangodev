---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import TopLayout from "@layouts/TopLayout.astro";
import BottomLayout from "@layouts/BottomLayout.astro";
import { WORK, RESUME_URL } from "@consts";
import { Image } from "astro:assets";

const collection = await getCollection("work");

collection.sort((a, b) => {
  // Check if either job is "Present"
  const aIsPresent = a.data.dateEnd === "Present";
  const bIsPresent = b.data.dateEnd === "Present";
  
  // If one is Present and the other isn't, Present comes first
  if (aIsPresent && !bIsPresent) return -1;
  if (!aIsPresent && bIsPresent) return 1;
  
  // If both are Present, sort by start date (latest first)
  if (aIsPresent && bIsPresent) {
    return new Date(b.data.dateStart).getTime() - new Date(a.data.dateStart).getTime();
  }
  
  // If neither is Present, sort by end date (latest first)
  return new Date(b.data.dateEnd).getTime() - new Date(a.data.dateEnd).getTime();
});

const work = await Promise.all(
  collection.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  }),
);

function formatWorkDate(input: Date | string) {
  if (typeof input === "string") return input;

  const month = input.toLocaleDateString("en-US", {
    month: "short",
  });

  const year = new Date(input).getFullYear();
  return `${month} ${year}`;
}
---

<PageLayout title={WORK.TITLE} description={WORK.DESCRIPTION}>
  <TopLayout>
    <div class="animate page-heading">
      {WORK.TITLE}
    </div>
    <p class="animate mt-4">
      View my
      <button
        id="resume-btn"
        class="underline underline-offset-4 cursor-pointer bg-transparent border-none p-0 text-[length:inherit] font-[inherit] text-current">resume.</button
      >
    </p>

    <!-- Gru Resume Modal -->
    <div id="resume-modal" class="fixed inset-0 z-50 hidden items-center justify-center" data-resume-url={RESUME_URL}>
      <!-- Backdrop with blur -->
      <div id="resume-backdrop" class="absolute inset-0 bg-black/70 backdrop-blur-md cursor-pointer"></div>

      <!-- Content -->
      <div class="relative z-10 flex flex-col items-center text-center text-white">
        <div class="w-64 h-64 mb-4 rounded-2xl overflow-hidden">
          <img
            src="/assets/misc/gru.png"
            alt="Gru"
            class="w-full h-full object-cover animate-pulse"
          />
        </div>

        <!-- Loading spinner -->
        <div class="mb-4">
          <svg class="animate-spin h-8 w-8 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>

        <p class="text-sm font-bold mb-2">You better hire me if you're looking at my resume</p>

        <p class="text-xs">
          Redirecting in <span id="countdown" class="font-mono font-bold">3.000</span>...
        </p>
        <p class="text-xs mt-2 opacity-70">
          If this doesn't redirect, <a href={RESUME_URL} target="_blank" rel="noopener noreferrer" class="underline">click here</a>.
        </p>
      </div>
    </div>

    <script>
      let animationId: number | null = null;
      let cleanupFn: (() => void) | null = null;

      function initResumeButton() {
        // Clean up previous listeners if any
        cleanupFn?.();

        const resumeBtn = document.getElementById('resume-btn');
        const modal = document.getElementById('resume-modal');
        const backdrop = document.getElementById('resume-backdrop');
        const countdown = document.getElementById('countdown');
        const resumeUrl = modal?.dataset.resumeUrl ?? '';

        if (!resumeBtn || !modal) return;

        function closeModal() {
          if (animationId) {
            cancelAnimationFrame(animationId);
            animationId = null;
          }
          modal?.classList.add('hidden');
          modal?.classList.remove('flex');
          if (countdown) countdown.textContent = '3.000';
        }

        function handleBackdropClick() {
          closeModal();
        }

        function handleResumeClick() {
          modal?.classList.remove('hidden');
          modal?.classList.add('flex');

          const duration = 3000;
          const startTime = performance.now();

          function updateCountdown(currentTime: number) {
            const elapsed = currentTime - startTime;
            const remaining = Math.max(0, duration - elapsed);

            if (countdown) {
              countdown.textContent = (remaining / 1000).toFixed(3);
            }

            if (remaining > 0) {
              animationId = requestAnimationFrame(updateCountdown);
            } else {
              window.open(resumeUrl, '_blank', 'noopener,noreferrer');
              closeModal();
            }
          }

          animationId = requestAnimationFrame(updateCountdown);
        }

        backdrop?.addEventListener('click', handleBackdropClick);
        resumeBtn.addEventListener('click', handleResumeClick);

        // Store cleanup function for when we navigate away
        cleanupFn = () => {
          backdrop?.removeEventListener('click', handleBackdropClick);
          resumeBtn.removeEventListener('click', handleResumeClick);
          if (animationId) {
            cancelAnimationFrame(animationId);
            animationId = null;
          }
        };
      }

      // Initialize on first load
      initResumeButton();

      // Re-initialize on client-side navigation (ClientRouter)
      document.addEventListener('astro:page-load', initResumeButton);

      // Cleanup on navigation away
      document.addEventListener('astro:before-swap', () => {
        cleanupFn?.();
        cleanupFn = null;
      });
    </script>
  </TopLayout>
  <BottomLayout>
    <ul>
      {
        work.map((entry) => (
          <li class="animate mt-4 border-b border-black/10 py-8 first-of-type:mt-0 first-of-type:pt-0 last-of-type:border-none dark:border-white/25">
            <div class="mb-4 text-xs uppercase font-mono">
              {formatWorkDate(entry.data.dateStart)} -{" "}
              {formatWorkDate(entry.data.dateEnd)}
              {entry.data.location && (
                <>  â€¢  <a
                  href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(entry.data.location)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:underline"
                >{entry.data.location}</a></>
              )}
            </div>
            <div class="my-2 flex items-center font-semibold text-black dark:text-white">
              <Image
                src={entry.data.logo}
                alt={entry.data.company}
                class="mr-2 h-6 w-6 object-contain"
              />
              {entry.data.companyUrl ? (
                <a
                  href={entry.data.companyUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="leading-none hover:underline"
                >
                  {entry.data.company}
                </a>
              ) : (
                <span class="leading-none">{entry.data.company}</span>
              )}
            </div>
            <div class="ml-8 text-sm font-semibold">{entry.data.role}</div>
            <article class="prose pb-2 dark:prose-invert">
              <entry.Content />
            </article>
          </li>
        ))
      }
    </ul>
  </BottomLayout>
</PageLayout>
